<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
          "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  
   <package name="xxx" extends="json-default">
   
   	<!-- 管理员登录 -->
     <action name="adminlogin" class="com.luoyunfan.action.AdminAction" method="adminLogin">
       <result type="json"></result>
     </action>
     <!-- 学生登录 -->
     <action name="stulogin" class="com.luoyunfan.action.StudentAction" method="stuLogin">
       <result type="json"></result>
       </action>
     <action name="stuFind" class="com.luoyunfan.action.StudentAction" method="stuFind">
       <result type="redirect" name="success">/student/changeInfo.jsp</result>
     </action>
     <!-- 学生注册 -->
     <action name="stuRegist" class="com.luoyunfan.action.StudentAction" method="stuRegist">
     	<result type="json"></result>
     </action>
     <!-- 管理员页面学生查询 -->
     <action name="stuSearch" class="com.luoyunfan.action.AdminAction" method="stuSearch">
     	<result type="redirect" name="success">/admin/studentSearch.jsp</result>
     	<result type="redirect" name="add">/admin/testAdd.jsp</result>
     </action>
     <!-- 查询界面按条件查询学生 -->
     <action name="serachByCondition" class="com.luoyunfan.action.AdminAction" method="serachByCondition">
   		  <result type="redirect" name="success">/admin/studentSearch.jsp</result>
     </action>
     	<!-- 删除学生 -->
     	<action name="delStu" class="com.luoyunfan.action.AdminAction" method="delStu">
     		<result type="redirect" name="success">/admin/studentSearch.jsp</result>
     	</action>
     	<!-- 删除题目 -->
     	<action name="delTimu" class="com.luoyunfan.action.AdminAction2" method="delTimu">
     		<result type="redirect" name="success">/admin/TimuSearch.jsp</result>
     	</action>
      <!-- 退出登录 -->
      <action name="exitLogin" class="com.luoyunfan.action.AdminAction" method="exitLogin">
      	<result type="redirect" name="success">/index.jsp</result>
      </action>
      <!-- 题目查询 -->
      <action name="timuSearch" class="com.luoyunfan.action.AdminAction2" method="timuSearch">
      	<result type="redirect" name="success">/admin/TimuSearch.jsp</result>
      	<result type="redirect" name="add">/admin/paperAdd.jsp</result>
      	 
      </action>
      <!-- 添加题目 --> 
      <action name="addTimu" class="com.luoyunfan.action.AdminAction2" method="addTimu">
      	   <result type="json"></result>
      </action>
      <!-- 根据id查询题目 -->
      <action name="serachTimuByCondition" class="com.luoyunfan.action.AdminAction2" method="serachTimuByCondition">
      		  <result type="redirect" name="success">/admin/TimuSearch.jsp</result>
      </action>
      <!-- 生成试卷 -->
      <action name="addPaper" class="com.luoyunfan.action.AdminAction2" method="addPaper">
      		<result type="json"></result>
      </action>
      <!-- 试卷名字查询 -->
      <action name="paperSearch" class="com.luoyunfan.action.AdminAction2" method="paperSearch">
      		<result type="redirect" name="success">/admin/paperSearch.jsp</result>
      </action>
      <!-- 删除试卷 -->
      <action name="delPaper" class="com.luoyunfan.action.AdminAction2" method="delPaper">
      	 <result type="redirect" name="success">/admin/paperSearch.jsp</result>
      </action>
      <!-- 查询某个试卷的详细信息 -->
      <action name="paperDetail" class="com.luoyunfan.action.AdminAction2" method="paperDetail">
      	<result type="redirect" name="success">/admin/paperDetail.jsp</result>
      	<result type="redirect" name="stusuccess">/student/paperDetail.jsp</result>
      </action>
      <!-- 给某个学生安排考试 -->
      <action name="testPlan" class="com.luoyunfan.action.AdminAction2" method="testPlan">
      	<result type="redirect" name="success">/admin/testPlan.jsp</result>
      </action>
      <!-- 向数据表examPlan添加数据 -->
      <action name="addTestPlan" class="com.luoyunfan.action.AdminAction2" method="addTestPlan">
      	<result type="json"></result>
      </action>
     	<!-- 修改考试时间 -->
     	<action name="changeTestPlan" class="com.luoyunfan.action.AdminAction2" method="changeTime">
     		<result type="json"></result>
     	</action>
      <!-- 查询所有考试信息 -->
      <action name="searchAllTest" class="com.luoyunfan.action.AdminAction2" method="searchAllTest">
      	<result type="redirect" name="success">/admin/testSearch.jsp</result>
      	<result type="redirect" name="stu">/student/noTest.jsp</result>
      </action>
      <action name="delTest" class="com.luoyunfan.action.AdminAction2" method="delTest">
      	 <result type="redirect" name="success">/admin/testSearch.jsp</result>
      </action>
      <action name="timuChange" class="com.luoyunfan.action.AdminAction2" method="timuChange">
      	<result type="redirect" name="success">/admin/timuChange.jsp</result>
      </action>
      <action name="ChangeTimu" class="com.luoyunfan.action.AdminAction2" method="ChangeTimu">
      	<result type="json"></result>
      </action>
      <action name="changeInfo" class="com.luoyunfan.action.StudentAction" method="changeInfo">
      	<result type="json"></result>
      </action>
      <!-- 前往考试 -->
      <action name="gotoTest" class="com.luoyunfan.action.AdminAction2" method="gotoTest">
      	<result type="redirect" name="success">/student/test.jsp</result>
      </action>
      <action name="getResult" class="com.luoyunfan.action.AdminAction2" method="getResult">
      	 <result type="redirect" name="success">/student/index.jsp</result>
      </action>
      <!-- 查询学生已经通过的考试 -->
      <action name="searchPastTest" class="com.luoyunfan.action.AdminAction2" method="searchPastTest">
      		<result type="redirect" name="success">/student/alreadyTest.jsp</result>
      </action>
   </package>
</struts>
